<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="4dip">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtInicio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/txtNivel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#E6E6E6" />

            <TextView
                android:id="@+id/txtBlinds"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#E6E6E6"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/nextBlinds"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#E6E6E6"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtContador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E6E6E6"
                android:textSize="80sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/pause"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:padding="5dp"
                    android:src="@drawable/ic_pause_circle_outline_black_48dp"
                    android:tint="@color/buttonTextColor"
                    android:visibility="gone">

                    <requestFocus />
                </ImageButton>

                <ImageButton
                    android:id="@+id/play"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:padding="5dp"
                    android:src="@drawable/ic_play_circle_outline_black_48dp"
                    android:tint="@color/buttonTextColor">

                    <requestFocus />
                </ImageButton>

                <ImageButton
                    android:id="@+id/reset"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:padding="5dp"
                    android:src="@drawable/ic_replay_black_48dp"
                    android:tint="@color/buttonTextColor">
                </ImageButton>

                <ImageButton
                    android:id="@+id/skip"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:padding="5dp"
                    android:src="@drawable/ic_skip_next_black_48dp"
                    android:tint="@color/buttonTextColor"/>
                <ImageButton
                    android:id="@+id/add_player"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:padding="5dp"
                    android:src="@drawable/ic_person_add_black_48dp"
                    android:tint="@color/buttonTextColor"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>